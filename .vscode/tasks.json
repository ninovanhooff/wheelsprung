{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Universal PDX",
            "type": "shell",
            "hide": true,
            "command": "nimble all"
        },
        {
            "label": "Build Simulator PDX",
            "presentation": {
                "clear": true,
            },
            "type": "shell",
            "hide": true,
            "command": ". ./scripts/set_release_env.sh && nimble simulator",
        },
        {
            "label": "Build Device PDX",
            "type": "shell",
            "hide": true,
            "presentation": {
                "clear": true,
            },
            "command": ". ./scripts/set_release_env.sh && nimble device"
        },
        {
            "label": "Build & Run Simulator PDX",
            "type": "shell",
            "dependsOn": [
                "Build Simulator PDX"
            ],
            "command": "open --stdout ./stdout.txt --stderr ./stderr.txt ${workspaceFolder}/${workspaceFolderBasename}.pdx",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        // included in the Level Sync Watcher task
        // {
        //     "label": "Update level content hashes",
        //     "presentation": {
        //         "clear": true,
        //     },
        //     "type": "shell",
        //     "problemMatcher": [],
        //     "command": ". ./scripts/set_release_env.sh && ./scripts/run_level_updater.sh"
        // },
        {
            "label": "Reboot Device to Data disk",
            "type": "shell",
            "command": "./scripts/reboot_datadisk.sh",
            "problemMatcher": [],
            "group": {
                "kind": "none",
            }
        },
        {
            "label": "Level Sync Watcher",
            "type": "shell",
            "command": "./scripts/sync_levels.sh",
            "problemMatcher": [],
            "presentation": {
                "clear": true,
                "echo": true,
                "reveal": "never",
                "showReuseMessage": false,
            },
            "group": {
                "kind": "none",
            }
        },
        {
            "label": "Build & Run Device PDX",
            "type": "shell",
            "dependsOn": [
                "Reboot Device to Data disk",
                "Build Device PDX"
            ],
            "command": "./scripts/quickinstall.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Build & Run all",
            "dependsOn": [
                "Build & Run Device PDX",
                "Build & Run Simulator PDX"
            ],
            "problemMatcher": []
        }
    ]
}